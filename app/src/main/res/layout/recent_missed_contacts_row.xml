<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/bottom_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recent_missed_image"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:src="@drawable/ic_phone_missed_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_missed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp"
            android:text="Pankaj Koirala (2)"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recent_missed_name_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="unknown"
            android:textColor="#ccc"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/recent_missed_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="3:02 PM"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/recent_missed_information_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:gravity="center" />


</LinearLayout>