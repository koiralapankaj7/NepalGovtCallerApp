<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.koiralapankaj007gmail.nepalgovtcallerapp.MainActivity">

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--<include layout="@layout/fragment_keypad" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/favourites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="favouritesEventTrigger"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favourites_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="2sp"
                android:src="@drawable/ic_star_border_black_24dp" />

            <TextView
                android:id="@+id/favourites_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourites"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="recentsEventTrigger"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recents_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3sp"
                android:src="@drawable/ic_query_builder_black_24dp" />

            <TextView
                android:id="@+id/recents_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="contactsEventTrigger"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contacts_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3sp"
                android:src="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:id="@+id/contacts_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="keypadEventTrigger"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/keypad_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:src="@drawable/ic_keyboard_before" />

            <TextView
                android:id="@+id/keypad_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keypad"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/voiceMail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="voicemailEventTrigger"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/voiceMail_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3sp"
                android:src="@drawable/ic_voicemail_black_24dp" />

            <TextView
                android:id="@+id/voiceMail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voicemail"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
