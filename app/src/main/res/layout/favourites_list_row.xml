<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/bottom_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/favourites_image"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favourites_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp"
            android:text="Pankaj Koirala"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favourites_number_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Phone"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/favourites_information_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_info_outline_black_24dp"
        android:gravity="center" />


</LinearLayout>